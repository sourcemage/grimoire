depends pkgconfig  &&
depends glib2  &&
depends dbus   &&
if  [  "$DBUS_XMLTYPE"  ==  'y'  ];  then
   depends  libxml2  '--with-xml=libxml'
else
   depends  expat  '--with-xml=expat'
fi  &&
optional_depends  gtk-doc                    \
                  '--enable-gtk-doc'         \
                  '--disable-gtk-doc'        \
                  'Build gtk-doc documentation'  &&

optional_depends  xmlto                      \
                  '--enable-xml-docs'        \
                  '--disable-xml-docs'       \
                  'Build XML Documentation'
