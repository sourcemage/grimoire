. "$GRIMOIRE"/CMAKE_DEPENDS &&
depends qt6base &&
depends sqlite &&
runtime_depends wget &&
runtime_depends wine &&
optional_depends dbus \
                 "for DBus support" \
                 -DWITH_DBUS=ON \
                 -DWITH_DBUS=OFF &&
optional_depends fuseiso \
                 "for ISO9660 filesystem support" \
                 "" \
                 "" &&
optional_depends icoutils \
                 "for MS Windows icon format support" \
                 -DWITH_ICOUTILS=ON \
                 -DWITH_ICOUTILS=OFF
