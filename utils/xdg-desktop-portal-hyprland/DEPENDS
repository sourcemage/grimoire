. "${GRIMOIRE}/MESON_DEPENDS"         &&
depends xdg-desktop-portal            &&
depends pipewire                      &&
depends hyprland                      &&
depends wayland                       &&
depends wayland-protocols             &&
depends inih                          &&
depends mesa                          &&
depends libdrm                        &&
depends sdbus-cpp                     &&

optional_depends systemd \
                 'systemd=enabled' \
                 'systemd=disabled' \
                 'for systemd unit' &&

optional_depends qt6base "" "" "for hyprland-share-picker" &&
if is_depends_enabled "${SPELL}" "qt6base"; then
  depends cmake &&
  depends make &&
  depends qt6wayland
fi
