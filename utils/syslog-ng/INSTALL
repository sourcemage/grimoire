make install DESTDIR=${INSTALL_ROOT} &&
if  [  !  -f  ${INSTALL_ROOT}/etc/syslog-ng/syslog-ng.conf  ];
then

  mkdir  -p ${INSTALL_ROOT}/etc/syslog-ng
  case   $CONF_SPECIAL_CONF in
      y|Y|a|A)
          cp  $SCRIPT_DIRECTORY/syslog-ng.conf  ${INSTALL_ROOT}/etc/syslog-ng/syslog-ng.conf
          ;;
          
      *)
          cp  doc/syslog-ng.conf.sample  ${INSTALL_ROOT}/etc/syslog-ng/syslog-ng.conf
          ;;
  esac
  
  chmod  640  ${INSTALL_ROOT}/etc/syslog-ng/syslog-ng.conf
  
fi
