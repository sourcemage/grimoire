depends bison &&
depends flex &&
depends dbus &&
depends glib2 &&

optional_depends alsa-lib \
                 "--enable-alsa" \
                 "--disable-alsa" \
                 "for ALSA support" &&

optional_depends cups \
                 "--enable-cups" \
                 "--disable-cups" \
                 "for CUPS backend support" &&

optional_depends libusb \
                 "--enable-usb" \
                 "--disable-usb" \
                 "for USB support" &&

optional_depends gstreamer \
                 "--enable-gstreamer" \
                 "--disable-gstreamer" \
                 "for GStreamer support" &&

optional_depends udev \
                 "--enable-udevrules" \
                 "--disable-udevrules" \
                 "install the udev rules"
