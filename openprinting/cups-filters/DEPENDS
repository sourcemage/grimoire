depends -sub CXX gcc &&
depends zlib        &&
depends PKG-CONFIG   &&
depends cups        &&
depends glib2       &&
depends libcupsfilters &&
depends libppd &&

# required for pstopdf script
runtime_depends bc  &&

optional_depends ghostscript \
                 '--enable-ghostscript' \
                 '--disable-ghostscript' \
                 'Ghostscript based filters' &&

optional_depends -sub XPDF_HEADERS poppler \
                 '--enable-poppler' \
                 '--disable-poppler' \
                 'Poppler based filters'
