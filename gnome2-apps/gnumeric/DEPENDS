optional_depends  gobject-introspection                \
                  "--enable-introspection"             \
                  "--disable-introspection"            \
                  "Enable introspection support?"      &&

optional_depends  psiconv                              \
                  "--with-psiconv"                     \
                  "--without-psiconv"                  \
                  "Build with psiconv support?"        &&

