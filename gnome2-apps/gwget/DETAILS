           SPELL=gwget
         VERSION=1.0.4
          BRANCH=`echo $VERSION|cut -d . -f 1,2`
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://ftp.gnome.org/pub/GNOME/sources/$SPELL/$BRANCH/$SOURCE
      SOURCE_GPG="gurus.gpg:${SOURCE}.sig:WORKS_FOR_ME"
      LICENSE[0]=GPL
        WEB_SITE=http://www.gnome.org/projects/gwget/
         ENTERED=20041009
        KEYWORDS="gnome2"
           SHORT="Gnome download manager"
cat << EOF
Gwget is a download manager for the gnome desktop.
Main features are: resume, notification support (close the main window
and it runs in the background), recursivity, drag&drop, speed limit.
EOF
