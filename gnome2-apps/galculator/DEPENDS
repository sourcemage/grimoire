depends glib2 &&
depends xml-parser-expat &&

optional_depends gtk+3 \
                 "--enable-gtk3" \
                 "--disable-gtk3" \
                 "to use GTK+3 instead of GTK+2" &&

if ! is_depends_enabled $SPELL gtk+3; then
  depends gtk+2 &&
  depends libglade2
fi &&

optional_depends gettext \
                 "--enable-nls" \
                 "--disable-nls" \
                 "to use Native Language Support"
