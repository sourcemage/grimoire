depends autoconf &&
depends e2fsprogs &&
depends libtool &&

optional_depends gettext \
                 "--enable-gettext" \
                 "--disable-gettext" \
                 "for alternate language support" &&

optional_depends util-linux \
                 "--enable-blkid" \
                 "--disable-blkid" \
                 "to use block device id library" &&

optional_depends readline \
                 "--enable-readline" \
                 "--disable-readline" \
                 "for readline command editing"
