depends  libaio &&
depends  util-linux  &&

optional_depends PKG-CONFIG \
                 "--enable-pkgconfig" \
                 "" \
                 "to install PKG-CONFIG support" &&

optional_depends readline \
                 "--enable-readline" \
                 "--enable-readline=no" \
                 "for readline shell support" &&

optional_depends GETTEXT \
                 "--enable-nls" \
                 "--disable-nls" \
                 "NLS support" \

optional_depends DEVICE-MANAGER \
                 "" \
                 "" \
                 ""
