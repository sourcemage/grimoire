           SPELL=mtools
         VERSION=4.0.17
          SOURCE=${SPELL}-${VERSION}.tar.bz2
         SOURCE2=$SOURCE.sig
  SOURCE2_IGNORE=signature
      SOURCE_GPG=6F431961.gpg:$SOURCE2:UPSTREAM_KEY
