default_pre_install                                &&
create_group plugdev				&&
if [ "$PMOUNT" == "y" ]; then
   usermod -G plugdev -a haldaemon haldaemon                   &&
   mkdir -p ${INSTALL_ROOT}/etc/hal/device.d                         &&
   ln -sfn ${INSTALL_ROOT}/usr/bin/pmount-hal ${INSTALL_ROOT}/etc/hal/device.d/60-pmount.hal
fi

