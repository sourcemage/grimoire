           SPELL=pmount
         VERSION=0.9.23
      PATCHLEVEL=1
          SOURCE=${SPELL}_${VERSION}.orig.tar.bz2
     SOURCE_HASH=sha512:a9d762fb9bd3f525d52b29a33c09c10a09f90fabdeed8f3658cb3fe8cbdbf237b2c9165b7c93a7170b9de5c65c513c1629b1fca638563a66d091c518782db92d
