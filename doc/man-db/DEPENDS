depends groff &&
depends libpipeline &&
depends zlib &&
optional_depends gdbm \
                 "--with-db=gdbm" \
                 "" \
                 "use gdbm as a database backend (otherwise use db)" &&
if ! is_depends_enabled "${SPELL}" "gdbm"; then
  depends db "--with-db=db"
fi &&

optional_depends less \
                 "--with-pager=LESS" \
                 "" \
                 "to use less as a pager" &&

optional_depends libseccomp \
                 "--with-libseccomp" \
                 "--without-libseccomp" \
                 "for sandboxing"
