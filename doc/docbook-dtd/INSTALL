install_docbook() {(
  VER=$1            &&
  cd  docbook-$VER  &&
  mkdir  -p     ${INSTALL_ROOT}/usr/share/xml/docbook/xml-dtd-$VER  &&
  cp     -r  *  ${INSTALL_ROOT}/usr/share/xml/docbook/xml-dtd-$VER
)}

install_docbook  $VERSION  &&
install_docbook  4.1.2     &&
install_docbook  4.2       &&
install_docbook  4.3
