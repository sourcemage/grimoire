           SPELL=rman
         VERSION=3.2
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/polyglotman/$SOURCE
   SOURCE_URL[1]=http://unl.dl.sourceforge.net/sourceforge/rman/$SOURCE
          MD5[0]=ecb80544a512791e68eb1eb45d51220e
        WEB_SITE='http://polyglotman.sourceforge.net'
         ENTERED=20020228
