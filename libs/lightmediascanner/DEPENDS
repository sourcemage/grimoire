depends  pkgconfig  &&
depends  sqlite     &&

if  [[  "$LIGHTMEDIASCANNER_SCM"  ==  "y"  ]];  then
  depends  git                        &&

  optional_depends mp4v2              \
                   "--enable-mp4"     \
                   "--disable-mp4"    \
                   "for MP4 support"  &&

  optional_depends flac                      \
                   "--enable-flac"           \
                   "--disable-flac"          \
                   "for FLAC audio support"  

fi  &&

optional_depends  'JPEG'                    \
                  '--enable-jpeg'           \
                  '--disable-jpeg'          \
                  'for JPEG image support'  &&

optional_depends  'libvorbis'                     \
                  '--enable-ogg'                  \
                  '--disable-ogg'                 \
                  'for Ogg/Vorbis audio support'
