depends  libxml2  &&

optional_depends  python                                  \
                  "--with-python"                         \
                  "--without-python"                      \
                  "to build python bindings for libxslt"

optional_depends  libgcrypt                     \
                  "--with-libgcrypt"            \
                  "--without-libgcrypt"         \
                  "for exslt:crypto extension"
