. "$GRIMOIRE/libcompat" &&

preserve_matches $SPELL "\
^/lib/libhistory\.so\.5.*
^/lib/libhistory\.so\.6.*
^/lib/libhistory\.so\.7.*
^/lib/libreadline\.so\.5.*
^/lib/libreadline\.so\.6.*
^/lib/libreadline\.so\.7.*" &&

install-info  --delete ${INSTALL_ROOT}/usr/share/info/history.info    --info-dir  ${INSTALL_ROOT}/usr/share/info
install-info  --delete ${INSTALL_ROOT}/usr/share/info/readline.info   --info-dir  ${INSTALL_ROOT}/usr/share/info
install-info  --delete ${INSTALL_ROOT}/usr/share/info/rluserman.info  --info-dir  ${INSTALL_ROOT}/usr/share/info
