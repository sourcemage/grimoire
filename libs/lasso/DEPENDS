depends  xmlsec  &&

optional_depends  gtk-doc                                               \
                  "--enable-gtk-doc                                     \
                   --with-html-dir=$INSTALL_ROOT/usr/share/doc/$SPELL"  \
                  '--disable-gtk-doc'                                   \
                  'for reference manual'                                &&

#optional_depends openssl '' '' 'for encrypted communications' &&

if [[ "$LASSO_BINDINGS" == y ]]; then
  depends swig  &&

  optional_depends  CSHARP              \
                    '--enable-csharp'   \
                    '--disable-csharp'  \
                    'for C# bindings'   &&

  optional_depends  JAVA                 \
                    '--enable-java'      \
                    '--disable-java'     \
                    'for Java bindings'  \
                    'z-rejected'         &&

  optional_depends  perl                 \
                    '--enable-perl'      \
                    '--disable-perl'     \
                    'for Perl bindings'  &&

  optional_depends  PHP                 \
                    '--enable-php'      \
                    '--disable-php'     \
                    'for PHP bindings'  &&

  optional_depends  python                 \
                    '--enable-python'      \
                    '--disable-python'     \
                    'for Python bindings'
fi
