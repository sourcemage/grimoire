depends boost &&
depends glm &&
depends gperf &&
depends liblangtag &&
depends librevenge &&
depends libxml2 &&
VV=`installed_version mdds` &&
if [[ $VV == '3.1.0' ]];then
  VV='3.0.0'
fi &&
depends mdds --with-mdds=${VV%.?} &&
optional_depends doxygen \
                 --{with,without}-docs \
                 'for building documentation'
