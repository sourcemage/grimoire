#install    --mode=644 include/nspr/*.h          $INSTALL_ROOT/usr/include/nspr/          &&
#install -d --mode=755                           $INSTALL_ROOT/usr/include/nspr/obsolete  &&
#install    --mode=644 include/nspr/obsolete/*.h $INSTALL_ROOT/usr/include/nspr/obsolete/
