   SOURCE_URL[0]=$SOURCEFORGE_URL/project/${SPELL}/${SOURCE}
     SOURCE_HASH=sha512:8bd6ee724600880840048c7b36f02d31b1aa4910b17f80fb04aef89b1f1917856d9979ec488edbd457b66d9d689aea97540abb842a8b902bbd75c66a6e07b9b1
