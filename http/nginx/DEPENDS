depends openssl "--with-http_ssl_module" &&

optional_depends pcre \
                 "--with-pcre" \
                 "--without-pcre" \
                 "for PCRE library usage" &&

optional_depends perl \
                 "--with-http_perl_module" "" \
                 "for embedded Perl support" &&

if [[ $NGINX_SYSLOG == y ]]; then
  depends SYSTEM-LOGGER
fi
