if [[ "$DILLO_CVS" == "y" ]]; then
depends  libtool   &&
depends  automake  &&
depends  autoconf  &&
depends  CVS
fi &&
depends  fltk2     &&
depends  wget      &&

if [[ "$DILLO2_SSL" == "y" && "$DILLO2_CVS" == "n" ]]; then
    depends  "openssl"
fi &&

if [[ "$DILLO2_CVS" == "y" ]]; then
    optional_depends  "openssl"                 \
                  "--enable-ssl"            \
                  "--disable-ssl"           \
                  "for SSL support"
fi &&

optional_depends  "JPEG"                    \
                  "--enable-jpeg"           \
                  "--disable-jpeg"          \
                  "for jpeg image support"  &&

optional_depends  "giflib"                  \
                  "--enable-gif"            \
                  "--disable-gif"           \
                  "for gif image support"   &&

optional_depends  "libpng"                    \
                  "--enable-png"           \
                  "--disable-png"          \
                  "for png image support"

