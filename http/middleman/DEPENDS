depends -sub CXX gcc   &&
depends  pcre  &&

optional_depends  zlib                             \
                  '--enable-zlib'                  \
                  '--disable-zlib'                 \
                  'for GZip and Deflate encoding'  &&

optional_depends  openssl            \
                  '--enable-ssl'     \
                  '--disable-ssl'    \
                  'for SSL support'  &&

optional_depends  linux-pam          \
                  '--enable-pam'     \
                  '--disable-pam'    \
                  'for PAM support'
