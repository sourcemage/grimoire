depends -sub CXX gcc &&
depends -sub WITHSSL libevent &&
depends pkgconfig &&

optional_depends -sub "SYSTEM THREAD" boost \
                 "--enable-asio-lib" \
                 "--disable-asio-lib" \
                 "for threading support" &&

optional_depends jansson \
                 "--enable-hpack-tools" \
                 "--disable-hpack-tools" \
                 "for HPACK tools" &&

if [[ ${INIT_INSTALLED} ]]; then
  depends libev "--enable-app"
else
  optional_depends libev \
                   "--enable-app" \
                   "--disable-app" \
                   "enable utils"
fi &&

optional_depends libxml2 \
                 "--with-libxml2" \
                 "--without-libxml2" \
                 "for XML support" &&

optional_depends python3 \
                 "--enable-python-bindings" \
                 "--disable-python-bindings" \
                 "for Python bindings (needs cython too)" &&

if is_depends_enabled $SPELL $(get_spell_provider $SPELL PYTHON); then
  depends cython
fi &&

if is_depends_enabled ${SPELL} libev; then
  depends c-ares &&
  depends SSL &&
  depends zlib
fi &&

optional_depends systemd \
                 "--with-systemd" \
                 "--without-systemd" \
                 "for systemd support"
