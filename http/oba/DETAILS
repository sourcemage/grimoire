          SOURCE=${SPELL}v$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/${SPELL}v3
   SOURCE_URL[0]=$SOURCEFORGE_URL/$SPELL/$SOURCE
     SOURCE_HASH=sha512:8fb3d284f4588bebd82a8e590b5fd9d31576b32af5c60f7879e271fa8c02e690b9ce27b6617da0f23af30911aaba0614b1128e9fc5c6eb4e5d6f7b3c8318786a
