SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/xplanet/$SOURCE
          MD5[0]=1fef51cc00ec317f95cb4cdd9751b5fd
