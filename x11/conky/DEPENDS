                 "-DBUILD_XMMS2=on" \
                 "-DBUILD_XMMS2=off" \
                 "for XMMS2 support" &&

optional_depends bmpx \
                 "-DBUILD_BMPX=on" \
                 "-DBUILD_BMPX=off" \
                 "for BMPx support" &&

optional_depends audacious \
                 "-DBUILD_AUDACIOUS=on" \
                 "-DBUILD_AUDACIOUS=off" \
                 "for Audacious support" &&

optional_depends libical \
                 "-DBUILD_ICAL=on" \
                 "-DBUILD_ICAL=off" \
                 "for ical support" &&

optional_depends libircclient \
                 "-DBUILD_IRC=on" \
                 "-DBUILD_IRC=off" \
                 "for IRC support" &&

optional_depends imlib2 \
                 "-DBUILD_IMLIB2=on" \
                 "-DBUILD_IMLIB2=off" \
                 "for Imlib2 support" &&

