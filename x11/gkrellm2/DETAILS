SOURCE_DIRECTORY=$BUILD_DIRECTORY/gkrellm-$VERSION
   SOURCE_URL[0]=http://members.dslextreme.com/users/billw/gkrellm/$SOURCE
          MD5[0]='08dd85ac2037b9cd6daa2b8616ab15d9'
