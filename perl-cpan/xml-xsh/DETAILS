   SOURCE_URL[0]=http://www.cpan.org/authors/id/P/PA/PAJAS/$SOURCE
     SOURCE_HASH=sha512:6da2883a369890753a4468547fa2ed8b94a8fa581f5aea1ce2d36747a5c53ad0dfd1afcc4efee750ad02df579f0bcf5d55369421a457583f3c489d9e3a509516
