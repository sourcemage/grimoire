   SOURCE_URL[0]=http://www.cpan.org/authors/id/M/MS/MSERGEANT/$SOURCE
     SOURCE_HASH=sha512:c6e534493eb83e7c300231120b928c619b9832fdc9a6e8ac77cca8729d529df62b55c2b5da3f2e415240671b192ff0f74dd1f62abd15d4dbf572e9b31b55ecad
