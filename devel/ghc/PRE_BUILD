mk_source_dir $SOURCE_DIRECTORY &&
cd $SOURCE_DIRECTORY &&

if [[ $SOURCE2 != "" ]] ; then
  unpack_file 2 &&
  mv $SPELL-$VERSION ghc-bin
fi &&

unpack_file &&

if [[ $GHC_NO_OPTS == "y" ]] ; then
  cp -v ${SCRIPT_DIRECTORY}/build.mk.no-opts ${SOURCE_DIRECTORY}/${SPELL}-${VERSION}/mk/build.mk
fi &&
cd ${SOURCE_DIRECTORY}/${SPELL}-${VERSION} &&
perl boot
