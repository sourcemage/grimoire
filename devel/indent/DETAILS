   SOURCE_URL[1]=ftp://ftp.gnu.org/pub/gnu/$SPELL/$SOURCE
     SOURCE_HASH=sha512:80ef36e76a54e3adabe87f08fe7d8b447ef36598e70c5602f218138c60f1ab0cf17f3e4db353507cc15ed6d247c99e2bf6a300e4db6fb21499cfa1feadee1c4e
