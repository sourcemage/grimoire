   SOURCE_URL[1]=ftp://ftp.gnu.org/pub/gnu/$SPELL/$SOURCE
     SOURCE_HASH=sha512:3fab46979779b2ac35c6ca8aaf52589ef3ccec55d41889941afb18764d5f9b6c516ea93da02e621cc42b01e87ec534c4e4bc3b6a77ba733f028a512b013c9ede
