               SPELL=gnu-smalltalk
             VERSION=3.1
              SOURCE=smalltalk-$VERSION.tar.gz
             SOURCE2=$SOURCE.sig
    SOURCE_DIRECTORY=$BUILD_DIRECTORY/smalltalk-$VERSION
       SOURCE_URL[0]=$GNU_URL/smalltalk/$SOURCE
