default_pre_build      &&
cd  $SOURCE_DIRECTORY  &&
if ! spell_ok sbcl ; then
  # setup binary sbcl for bootstrapping
  unpack_file  2                                           &&
  pushd  $SPELL-$VERSION-$SBCL_ARCH-linux                  &&
  mkdir  $SOURCE_DIRECTORY/sbcl-bin                        &&
  INSTALL_ROOT=$SOURCE_DIRECTORY/sbcl-bin  sh  install.sh  &&
  popd
fi
