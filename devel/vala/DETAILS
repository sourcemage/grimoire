   SOURCE_URL[0]=$GNOME_URL/sources/$SPELL/$BRANCH/$SOURCE
        WEB_SITE=http://live.gnome.org/Vala
#      SOURCE_GPG=gurus.gpg:$SOURCE.sig:WORKS_FOR_ME
