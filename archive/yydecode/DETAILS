           SPELL=yydecode
         VERSION=0.2.10
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/$SPELL/$SOURCE
     SOURCE_HASH=sha512:0ca27e6458a1b3dbb022cde96a7c39bb93d91de8b0a6ce1e5105672e4df3a982267cf2c5f815d410e1b44afee5109a605fd2d1e4024d7ec1b90662a31ac72631
