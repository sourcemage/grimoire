          SOURCE="${SPELL}-scm.tar.xz"
   SOURCE_URL[0]="git_http://github.com/${SPELL}/${SPELL}:${SPELL}-scm"
SOURCE_DIRECTORY="${BUILD_DIRECTORY}/${SPELL}-scm"
   SOURCE_IGNORE="volatile"
  FORCE_DOWNLOAD="on"
else
         VERSION=2026.01.31
      SOURCE_HASH=sha512:f2296cc7ced9bf1e4d1ad1cf3e7ae089599fb6c7fb608da65fbbd04e93952e26e6d41918919f5d49af9a8ddcccf1264856de847e2dd5f81dd2617755e3da4b43
