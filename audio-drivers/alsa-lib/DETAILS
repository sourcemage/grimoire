   SOURCE_URL[0]=ftp://ftp.alsa-project.org/pub/lib/$SOURCE
     SOURCE_HASH=sha512:391a7061ecd01a202df06eec26f0f4c41897b548077827c0f99c138e186a0d2ecfab75269dd518922a4aeb9c5c7c3dfff541879f2716fb8fc0d9097f2b845106
