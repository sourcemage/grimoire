depends  alsa-lib  &&
if [[ $ALSA_PLUGINS_BRANCH == scm ]]; then
  depends git &&
  depends libtool &&
  depends automake &&
  depends autoconf
fi  &&

optional_depends  LIBAVCODEC               \
                  "--enable-avcodec"       \
                  "--disable-avcodec"      \
                  "for a52 plugin"         &&

optional_depends  JACK-DRIVER              \
                  "--enable-jack"          \
                  "--disable-jack"         \
                  "for jack plugin"        &&

optional_depends  libsamplerate            \
                  "--enable-samplerate"    \
                  "--disable-samplerate"   \
                  "for samplerate plugin"  &&

optional_depends  pulseaudio               \
                  "--enable-pulseaudio"    \
                  "--disable-pulseaudio"   \
                  "for pulseaudio plugin"
