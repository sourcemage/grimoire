persistent_add MPG123_WITH_AUDIO &&
MPG123_WITH_AUDIO="" &&
for i in $MPG123_AUDIO
do
  local add=$i
case $i in
  auto)
    MPG123_WITH_AUDIO=""
    add=""
  ;;
  esd)
    depends esound
  ;;
  jack)
    depends JACK-DRIVER
  ;;
  libao)
    depends libao
  ;;
  oss)
  ;;
  portaudio)
    depends PORTAUDIO
  ;;
  nas)
    depends nas
  ;;
  alsa)
    depends alsa-lib
  ;;
  sdl)
    depends sdl
  ;;
  pulse)
    depends pulseaudio
  ;;
  openal)
    depends openal
  ;;
esac &&
if [[ "$add" != "" ]]; then
  MPG123_WITH_AUDIO="$MPG123_WITH_AUDIO,$add"
fi
done &&
# Use libtool's libltdl.
if [[ "$MPG123_MODULES" == "--enable-modules" ]]; then
  depends libtool
fi
