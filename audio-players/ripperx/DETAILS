SOURCE_DIRECTORY=$BUILD_DIRECTORY/ripperX-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/ripperx/$SOURCE
          MD5[0]=67cfbeb1f0b790080fb6684c020bafd5
