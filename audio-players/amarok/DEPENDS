   optional_depends gstreamer "" "--without-gstreamer10" "for gstreamer audio engine"  &&
   optional_depends exscalibar "" "--without-exscalibar" "to use moodbar"
else
   optional_depends gstreamer-0.8 "" "--without-gstreamer" "for gstreamer audio engine"
fi &&
optional_depends arts "" "--without-arts" "for arts audio engine"
optional_depends xine-lib "" "--without-xine" "for xine-engine"  &&
