          SOURCE=$SPELLX-$VERSION.tar.gz
   SOURCE_URL[0]=$SOURCEFORGE_URL/ump3c/$SOURCE
     SOURCE_HASH=sha512:3733577d67024fff866dd4f9ab564fd0f97567c092fc0ea468d3e942302064cc9b17621b2e0046d7e642210d1258ca28472f5ed6556de588fb74d61bde12a933
