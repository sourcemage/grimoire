make_normal      &&
default_install  &&

if    !  [  -f  /etc/krb5.conf  ]
then  cp  config-files/krb5.conf  /etc
fi  &&

if    !  [  -f  /etc/kdc.conf  ]
then  sedit  "s:local/::g"  config-files/kdc.conf
      cp  config-files/kdc.conf  /etc
fi  &&

#
# Create symlink so packages (such as kdebase) can find krb5.h
#
ln  -s  /usr/include  /usr/include/krb5
