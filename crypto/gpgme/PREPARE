# 2006-07-07
# GPGME_OLD -> GPGME_BRANCH

if [ "$GPGME_OLD" == "y" ]; then
  persistent_add  GPGME_BRANCH  &&
  GPGME_BRANCH="0.3"            &&
  persistent_remove GPGME_OLD
fi

if [ "$GPGME_OLD" == "n" ]; then
  persistent_add  GPGME_BRANCH  &&
  GPGME_BRANCH="DEFAULT"        &&
  persistent_remove GPGME_OLD
fi

config_query_list GPGME_BRANCH "Which branch of GPGME do you want to build?" DEFAULT 0.3 1.0 1.1
