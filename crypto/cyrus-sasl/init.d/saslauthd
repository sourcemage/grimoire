#!/bin/bash

. /etc/sysconfig/saslauthd

PROGRAM=/usr/sbin/saslauthd
ARGS="-a $AUTH"
RUNLEVEL=3
NEEDS="+remote_fs"

.  /etc/init.d/smgl_init

if  [  !  -d  /var/run/saslauthd  ]
then
  mkdir  -p  --mode=700  /var/run/saslauthd
fi

if  [  !  -d  /var/state/saslauthd  ]
then
  mkdir  -p  --mode=700  /var/state/saslauthd
fi
