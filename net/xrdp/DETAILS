   SOURCE_URL[0]=${SOURCEFORGE_URL}/$SPELL/$SOURCE
     SOURCE_HASH=sha512:919ae48fcf2ab1da150b7d688bc07cfb200d24a69efe44d41fd44dc280b8c1904bac0278cc30a7387c8288030da96683077db6d6b16376ac3369afc2817c639a
