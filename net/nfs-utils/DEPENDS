depends gcc &&
depends gnupg &&
depends portmap &&
depends smgl-fhs

optional_depends tcp_wrappers \
                 "--with-tcp-wrappers" \
                 "--without-tcp-wrappers" \
                 "for TCP wrapper based access control" &&

# See http://www.citi.umich.edu/projects/nfsv4/linux/ for NFSv4 support
#
if [[ "$NFS_UTILS_NFSV4" == "--enable-nfsv4" ]]; then
  depends libevent &&
  depends libnfsidmap
fi
