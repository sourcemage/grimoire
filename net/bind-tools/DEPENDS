depends muon &&
depends samurai &&
depends libuv &&
depends userspace-rcu &&

optional_depends libcap \
                 -Dcap=enabled \
                 -Dcap=disabled \
                 "for linux capabilities support" &&

optional_depends libxml2 \
                 -Dstats-xml=enabled \
                 -Dstats-xml=disabled \
		 "link against libxml2" &&

optional_depends zlib \
                 -Dzlib=enabled \
                 -Dzlib=disabled \
		 "for zlib compression" &&

optional_depends libidn2 \
                 -Didn=enabled \
                 -Didn=disabled \
		 "for IDN support"
