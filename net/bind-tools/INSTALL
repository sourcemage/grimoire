cd "$SOURCE_DIRECTORY"/builddir &&
for exec in \
	delv \
	dig \
	dnssec-dsfromkey \
	dnssec-importkey \
	dnssec-keyfromlabel \
	dnssec-keygen \
	dnssec-revoke \
	dnssec-settime \
	dnssec-signzone \
	dnssec-verify \
	host \
	nslookup \
	nsupdate
do
  install -v -m555 -o root -g root "$exec" "$INSTALL_ROOT/usr/bin" &&
  install -v -m444 -o root -g root "$exec.1" "$INSTALL_ROOT/usr/share/man/man1/" || exit 1
done &&
for lib in libdns libisc libisccfg libns; do
  install -v -m555 -o root -g root "$lib-$VERSION.so" "$INSTALL_ROOT/usr/lib" || exit 1
done
