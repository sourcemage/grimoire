                  "--enable-libogg --enable-vorbis"  \
                  ""                 \
                  "for ogg/vorbis support"  &&
optional_depends  "faad2"          \
                  "--enable-faad"  \
                  ""               \
                  "for AAC audio support"  &&
optional_depends  "imlib2"         \
                  ""               \
                  ""               \
                  "for imlib2 support"  &&
optional_depends  "freetype2"  \
                  ""           \
                  ""           \
                  "for a text render plugin"  &&
