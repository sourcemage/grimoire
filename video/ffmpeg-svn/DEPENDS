depends  subversion  &&
optional_depends  "nasm"             \
                  ""                 \
                  "--disable-mmx"    \
                  "for MMX support"  &&
optional_depends  "lame"              \
                  "--enable-mp3lame"  \
                  ""                  \
                  "for mp3 encoding via libmp3lame"  &&
