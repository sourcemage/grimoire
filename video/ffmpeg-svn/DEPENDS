                  "--enable-dts"  \
                  ""              \
                  "for DTS audio decoding"  &&
optional_depends  "xvid"           \
                  "--enable-xvid"  \
                  ""               \
                  "for xvid support"  &&
optional_depends  sdl                 \
                  ""                  \
                  "--disable-ffplay"  \
                  "for ffplay video player"
