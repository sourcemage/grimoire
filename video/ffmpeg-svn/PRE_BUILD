default_pre_build          &&
cd $SOURCE_DIRECTORY 	   &&
sedit  's:-lpostproc:-Llibpostproc -lpostproc:'  libavcodec/Makefile  &&
sedit  's:-Werror::'  libavformat/Makefile  &&

message amr=$FFAMR  &&
cd libavcodec       &&
case $FFAMR in
    none);;
    *)
message amr-nb=$VERSION2         &&
      unpack_file 2              &&
      unzip ${VERSION2}*.zip     &&
      mv c-code amr_float        &&
#message amr-nb-fixed=$VERSION3   &&
#      unpack_file 3              &&
#      unzip ${VERSION3}*.zip     &&
#      mv c-code amr              &&
message amr-wb=$VERSION4         &&
      unpack_file 4              &&
      unzip ${VERSION4}*.zip     &&
      mv c-code amrwb_float
esac
