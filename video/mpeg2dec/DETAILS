SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-0.4.0
   SOURCE_URL[0]=http://libmpeg2.sourceforge.net/files/$SOURCE
        WEB_SITE=http://libmpeg2.sourceforge.net/
         ENTERED=20021004
