# interface options
optional_depends  "wxgtk"                 \
                  "--enable-wxwidgets"    \
                  "--disable-wxwidgets"   \
                  "for wxGTK and Skins2 interface"   &&

optional_depends  "ncurses"               \
                  "--enable-ncurses"      \
                  "--disable-ncurses"     \
                  "for ncurses interface"   &&

optional_depends  "xosd"                  \
                  "--enable-xosd"         \
                  "--disable-xosd"        \
                  "for xosd interface"    &&

optional_depends  "GECKO"                 \
                  "--enable-mozilla"      \
                  "--disable-mozilla"     \
                  "for a mozilla plugin"  &&

# control plugins
optional_depends  "lirc"                  \
                  "--enable-lirc"         \
                  "--disable-lirc"        \
                  "for lirc support"      &&

# video output options
