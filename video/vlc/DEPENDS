                  "--enable-a52"           \
                  "--disable-a52"          \
                  "for AC3 audio decoder"  &&

optional_depends  "libmad"                 \
                  "--enable-mad"           \
                  "--disable-mad"          \
                  "for fixed point mp3 decoder"  &&

optional_depends  "libid3tag" "" "" "for id3 tag reading support"  &&

optional_depends  "libvorbis"              \
                  "--enable-vorbis"        \
                  "--disable-vorbis"       \
                  "for ogg vorbis decoder" &&

optional_depends  "faad2"                  \
                  "--enable-faad"          \
                  "--disable-faad"         \
                  "for AAC audio decoder"  &&

optional_depends  "flac"                   \
                  "--enable-flac"          \
                  "--disable-flac"         \
                  "for flac audio decoder" &&

optional_depends  "libdts"                 \
                  "--enable-dts"           \
                  "--disable-dts"          \
                  "for DTS audio decoder"  &&

optional_depends  "libmpcdec"      \
                  "--enable-mpc"   \
                  "--disable-mpc"  \
                  "for musepack audio decoder"  &&

# video codec options
depends  mpeg2dec  &&
