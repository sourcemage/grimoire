depends  autoconf  &&
depends  JPEG      &&
optional_depends  LIBAVCODEC                            \
                  "--with-ffmpeg"                       \
                  "--without-ffmpeg"                    \
                  "for realtime mpeg encoding support"  &&
optional_depends  MYSQL                \
                  "--with-mysql"       \
                  "--without-mysql"    \
                  "for mysql support"  &&
optional_depends  postgresql         \
                  "--with-pgsql"     \
                  "--without-pgsql"  \
                  "for PostgreSQL support"
