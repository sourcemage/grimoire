   SOURCE_URL[0]=https://ffmpeg.org/releases/$SOURCE
  SOURCE2_URL[0]=${SOURCE_URL[0]}.asc
      SOURCE_GPG=ffmpeg.gpg:$SOURCE2:UPSTREAM_KEY
  SOURCE2_IGNORE=signature
        DOC_DIRS=""
