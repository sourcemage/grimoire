           SPELL=mlt
if [[ $MLT_BRANCH == scm ]];then
         VERSION=$(get_scm_version)
      SOURCE_IGNORE=volatile
          SOURCE=$SPELL-git.tar.bz2
   SOURCE_URL[0]=git://mltframework.org/mlt.git:mlt-git
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-git
  FORCE_DOWNLOAD=on
else
         VERSION=7.26.0
     SOURCE_HASH=sha512:a5b7658dd5721c3deac0ecad840fd2b38aaffff23351dd33a236dcae8a55b3b35f6ca17d60018e681568d00d70e512624683e032e877ae10a919c77b11d9acd7
