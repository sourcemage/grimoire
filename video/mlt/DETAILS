  FORCE_DOWNLOAD=on
else
         VERSION=7.12.0
     SOURCE_HASH=sha512:f2eebe1f83ede612968aacaa02c4bb60e98d70a49e2f6149f81b1c6835943825441b73a6f076565574c501a68216bcc84ceb8e0a441d05fe7b8930603b9e23ad
