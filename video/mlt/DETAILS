           SPELL=mlt
if [[ $MLT_BRANCH == scm ]];then
         VERSION=$(get_scm_version)
      SOURCE_IGNORE=volatile
          SOURCE=$SPELL-git.tar.bz2
   SOURCE_URL[0]=git://mltframework.org/mlt.git:mlt-git
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-git
  FORCE_DOWNLOAD=on
else
         VERSION=7.20.0
     SOURCE_HASH=sha512:1b3503fc79d61bc1a410b1098c21bc0815927a1cb3d5b7deecf397088faaa738d779ad5675ead728bec0fb39d475ad8d5120546395d4d1568aa7e3b790d06acd
