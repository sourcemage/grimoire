SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
fi
      LICENSE[0]=GPL
        WEB_SITE=http://www.mltframework.org/
         ENTERED=20030514
        KEYWORDS="video"
            DOCS="docs/*.txt"
