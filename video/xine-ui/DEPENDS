depends xine-lib &&
depends libpng &&

optional_depends gettext \
                 "--enable-nls" \
                 "--disable-nls" \
                 "for alternate language support" &&

optional_depends libxft \
                 "--enable-xft" \
                 "--disable-xft" \
                 "for Xft (antialias) support" &&

optional_depends libxinerama \
                 "--enable-xinerama" \
                 "--disable-xinerama" \
                 "for Xinerama support" &&

optional_depends aalib \
                 "--with-aalib" \
                 "--without-aalib" \
                 "for an ASCII UI" &&

optional_depends libcaca \
                 "--with-caca" \
                 "--without-caca" \
                 "for a colored ASCII UI" &&

optional_depends curl \
                 "--with-curl" \
                 "--without-curl" \
                 "for an integrated skin downloader" &&

optional_depends lirc \
                 "--enable-lirc" \
                 "--disable-lirc" \
                 "for Linux Infrared Remote Control support"
