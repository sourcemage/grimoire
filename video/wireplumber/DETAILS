. "${GRIMOIRE}/FUNCTIONS"
. "${GRIMOIRE}/MESON_FUNCTIONS"
           SPELL=wireplumber
if [[ "${WIREPLUMBER_BRANCH}" == scm ]]; then
         VERSION=$(get_scm_version)
          SOURCE=${SPELL}-git.tar.xz
   SOURCE_URL[0]="git_http://gitlab.freedesktop.org/pipewire/${SPELL}:${SPELL}-git"
SOURCE_DIRECTORY="${BUILD_DIRECTORY}/${SPELL}-git"
   SOURCE_IGNORE=volatile
  FORCE_DOWNLOAD=on
else
         VERSION=0.5.12
     SOURCE_HASH=sha512:e00317ef90add4d5a0e1b637109a2fba594f081f466c15e1c5e62b9157d9684c13a745c926cc18795d0e4899c7813ddb5615b5f396e191a455b11cab11a38990
          SOURCE=$SPELL-$VERSION.tar.bz2
SOURCE_DIRECTORY="${BUILD_DIRECTORY}/${SPELL}-${VERSION}"
   SOURCE_URL[0]="https://gitlab.freedesktop.org/pipewire/${SPELL}/-/archive/${VERSION}/${SOURCE}"
