source $GRIMOIRE/CMAKE_DEPENDS &&
depends -sub CXX gcc &&
depends wayland &&
depends vulkan-headers "-DVULKAN_HEADERS_INSTALL_DIR=${TRACK_ROOT}/usr" &&
