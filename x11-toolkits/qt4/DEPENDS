optional_depends glib2                               \
                  '-glib'                            \
                  '-no-glib'                         \
                  'glib support'                     &&


optional_depends  nas                                \
                  '-system-nas-sound'                \
                  '-no-nas-sound'                    \
                  'for Network Audio Sound support'
