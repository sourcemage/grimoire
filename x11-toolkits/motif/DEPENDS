depends expat      &&
depends fontconfig &&
depends freetype2  &&
depends libtool    &&
depends libx11     &&
depends libxt      &&
depends libxmu     &&
optional_depends  libxft                        \
                  '--enable-xft'                \
                  '--disable-xft'               \
                  'for XFT font anti-aliasing'  &&

optional_depends  JPEG                      \
                  '--enable-jpeg'           \
                  '--disable-jpeg'          \
                  'for JPEG image support'  &&

optional_depends  libpng                   \
                  '--enable-png'           \
                  '--disable-png'          \
                  'for PNG image support'
