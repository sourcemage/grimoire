   SOURCE_URL[0]=https://github.com/$SPELLX/$SPELLX/releases/download/v$VERSION/$SOURCE
      LICENSE[0]=http://www.wxwidgets.org/licence3.txt
        WEB_SITE=http://www.wxwidgets.org/
         ENTERED=20230311
           TMPFS=off
        KEYWORDS="x11 libs"
