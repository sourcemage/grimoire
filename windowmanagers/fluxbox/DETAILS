           SPELL=fluxbox
if [  "$FLUXBOX_CVS"  ==  "y"  ];  then
         VERSION=$(date +%Y%m%d)
          SOURCE=$SPELL-cvsroot.tar.bz2
   SOURCE_URL[0]=cvs://:pserver:anonymous@cvs.sourceforge.net:/cvsroot/fluxbox:fluxbox
          MD5[0]=IGNORE
  FORCE_DOWNLOAD=on
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-cvsroot
else
