   SOURCE_URL[0]=http://insitu.lri.fr/~chapuis/software/metisse/${SOURCE}
        WEB_SITE=http://insitu.lri.fr/~chapuis/metisse/
     SOURCE_HASH=sha512:24291810efbaafbc2e4db016010bdb9f17d1865dca61475c7ab3b402653f69027de6a714ec0de7494a78cb63473a1277fc02a0030297c9219b5584cc9a49e472
         ENTERED=20040715
