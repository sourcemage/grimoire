         VERSION=$(get_scm_version)
          SOURCE=${SPELL}-${SNAPPY_BRANCH}.tar.bz2
SOURCE_DIRECTORY=${BUILD_DIRECTORY}/${SPELL}-${SNAPPY_BRANCH}
  FORCE_DOWNLOAD=on
   SOURCE_URL[0]=git://github.com/google/${SPELL}.git
   SOURCE_IGNORE=volatile
else
         VERSION=1.1.7
     SOURCE_HASH=sha512:32046f532606ba545a4e4825c0c66a19be449f2ca2ff760a6fa170a3603731479a7deadb683546e5f8b5033414c50f4a9a29f6d23b7a41f047e566e69eca7caf
          SOURCE=$SPELL-$VERSION.tar.gz
