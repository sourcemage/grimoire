default_pre_build &&
cd "${SOURCE_DIRECTORY}" &&

if [[ $PHP5_BRANCH == legacy ]]; then
  unpack_file 4 &&
  patch -p1 < "${SOURCE_CACHE}/${SOURCE4}" &&
  patch -p0 < "$SPELL_DIRECTORY/pcre830.patch"
fi &&

if [[ "${PHP5_SUHOSIN}" == "y" ]]; then
    unpack_file 2 &&
    zcat "${SOURCE_CACHE}/${SOURCE2}" | patch -p1
fi
