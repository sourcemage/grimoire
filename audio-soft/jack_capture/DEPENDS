depends libsndfile  &&
depends JACK-DRIVER &&

optional_depends meterbridge                \
                 "" ""                      \
                 "for a graphical VU meter" &&

optional_depends xdialog                \
                 "" ""                  \
                 "to build Xdialog GUI" &&

optional_depends gtk+2                \
                 "" ""                \
                 "to build GTK+2 GUI" &&

if is_depends_enabled $SPELL gtk+2; then
  depends -sub CXX gcc &&
  depends pkgconfig
fi
