depends -sub CXX gcc         &&
depends  boost       &&
depends  libglademm  &&
depends  raul        &&
depends  flowcanvas  &&
depends  alsa-lib    &&

if [[ $PATCHAGE_VCS == y ]]
then
  depends  libtool   &&
  depends  automake  &&
  depends  autoconf
fi  &&

message  "${MESSAGE_COLOR}The D-Bus interface requires"  \
         "a development version of JACK.$DEFAULT_COLOR"  &&

optional_depends  dbus                   \
                  "--enable-jack-dbus"   \
                  "--disable-jack-dbus"  \
                  "to use a D-Bus interface for controlling JACK"  &&

if  is_depends_enabled  $SPELL  dbus
then
  depends  -sub DBUS  jack2
else
  depends  JACK-DRIVER
fi  &&

optional_depends  lash              \
                  "--enable-lash"   \
                  "--disable-lash"  \
                  "for audio session handling support"
