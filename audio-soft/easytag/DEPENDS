. "$GRIMOIRE/VDEPENDS" &&
depends perl &&
depends xml-parser &&
vdepends <<< "at-spi2-core >= 2.45.0" &&
depends bzip2 &&
depends cairo &&
depends expat &&
depends fontconfig &&
depends freetype2 &&
depends gdk-pixbuf2 &&
depends libpng &&
depends libx11 &&
depends libxau &&
depends libxcb &&
depends libxdmcp &&
depends libxext &&
depends libxrender &&
depends pango &&
depends pcre &&
depends pixman &&
depends zlib &&
depends glib2 &&
depends itstool &&
depends gtk+3 &&

optional_depends libid3tag \
                 "--enable-mp3" \
                 "--disable-mp3" \
                 "for MP3 files support" &&

if is_depends_enabled $SPELL libid3tag; then
  optional_depends id3lib \
                   "--enable-id3v23" \
                   "--disable-id3v23" \
                   "for writing id3v2.3 tags support" &&

  if is_depends_enabled $SPELL id3lib; then
    depends -sub CXX gcc
  fi
fi &&

optional_depends  flac                   \
                  "--enable-flac"        \
                  "--disable-flac"       \
                  "Enable Flac support"  &&

optional_depends  libogg                    \
                  "--enable-ogg"               \
                  "--disable-ogg"              \
                  "Enable Ogg/Vorbis support"   &&

if is_depends_enabled $SPELL libogg; then
  depends libvorbis
fi &&

optional_depends  gettext               \
                  "--enable-nls"        \
                  "--disable-nls"       \
                  "Enable nls support"  &&

optional_depends -sub MP4 taglib \
                 "--enable-mp4" \
                 "--disable-mp4" \
                 "for MP4 files support" &&

optional_depends  wavpack                   \
                  "--enable-wavpack"        \
                  "--disable-wavpack"       \
                  "Enable Wavpack support"  &&

optional_depends  speex                           \
                  "--enable-speex"                \
                  "--disable-speex"               \
                  "Enable ogg/speex container support"
