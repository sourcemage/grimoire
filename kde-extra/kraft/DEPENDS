source $GRIMOIRE/KDE_DEPENDS &&
vdepends <<! &&
  qt6svg
  kconfig
  kcontacts
  ki18n
  ktexttemplate
!
optional_depends asciidoctor '' '' 'build docs' &&
optional_depends akonadi \
                '-DBUILD_WITH_AKONADI=on' \
                '-DBUILD_WITH_AKONADI=off' \
                'use akonadi-contacts' &&
if is_depends_enabled $SPELL akonadi;then
  depends akonadi-contacts
fi
