depends  glib2    &&
depends  ncurses  &&
depends -sub CXX gcc      &&

optional_depends  "openssl"          \
                  ""                 \
                  "--disable-ssl"    \
                  "for SSL support"  &&

optional_depends  "perl"                \
                  "--with-perl=module"  \
                  "--with-perl=no"      \
                  "for perl support"    &&

optional_depends  "dante"               \
		  "--with-socks"        \
		  "--without-socks"     \
		  "for SOCKS support"   &&

if [[ $IRSSI_BRANCH == scm ]]; then
  depends  subversion
fi
