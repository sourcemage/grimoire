depends g++ &&

optional_depends perl \
                 "" "--disable-perl" \
                 "to use perl" &&

optional_depends cyrus-sasl \
                 "--enable-sasl" "" \
                 "for SASL support" &&

optional_depends c-ares \
                 "" "--disable-c-ares" \
                 "for c-ares usage" &&

optional_depends openssl \
                 "" "--disable-openssl" \
                 "to use OpenSSL"
