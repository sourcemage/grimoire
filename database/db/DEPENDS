optional_depends -sub CXX gcc             \
                  "--enable-cxx"  \
                  ""              \
                  "for C++ API"   &&

if  [  "$DB_JSUP"  ==  "--enable-java"  ];  then
  depends  JDK  '--enable-java'  ''  'z-rejected'  &&
  depends  uudeview                                &&
  depends  swig
fi  &&

if  [  "$DB_TESTS"  ==  "--enable-test"  ];  then
  depends  tcl  '--enable-tcl=/usr'
else
  optional_depends  tcl                    \
                    '--enable-tcl=/usr'    \
                    '--disable-tcl'        \
                    'API for TCL support'
fi
