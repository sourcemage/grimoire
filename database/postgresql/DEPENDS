optional_depends  tcl                \
                  "--with-tcl"       \
                  "--without-tcl"    \
                  "for tcl support"  &&

optional_depends  tk                \
                  "--with-tk"       \
                  "--without-tk"    \
                  "for tk support"  &&

optional_depends  perl                \
                  "--with-perl"       \
                  "--without-perl"    \
                  "for perl support"  &&

optional_depends  python                \
                  "--with-python"       \
                  "--without-python"    \
                  "for python support"  &&

optional_depends  linux-pam        \
                  "--with-pam"     \
                  "--without-pam"  \
                  "for PAM auth"   &&

optional_depends  krb5                    \
                  "--with-krb5"           \
                  "--without-krb5"        \
                  "for Kerberos support"  &&

optional_depends  unixodbc                         \
                  "--enable-odbc --with-unixodbc"  \
                  "--without-unixodbc"             \
                  "for unixODBC support"           &&

optional_depends  openssl                \
                  "--with-openssl"       \
                  "--without-openssl"    \
                  "for OpenSSL support"
