+ConfDataType * ConfData_Top = (ConfDataType *)NULL;
+ConfDataType * ConfData_End = (ConfDataType *)NULL;
+int SynSemID = -1;
+int MapTableShmid = -1;
+int LifeCheckStartShmid = -1;
+char * LifeCheckStartFlag = NULL;
+int LifeCheckTimeOut = 10;
