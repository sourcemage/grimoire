+typedef struct {
+	long mtype;
+	char mdata[1];
+}MsgData;
+
+typedef struct {
+	int useFlag;
+	int rec_no;
+	pid_t pid;
+}ChildTbl;
+
+#define UNIX_DOMAIN_FD	(0)
+#define INET_DOMAIN_FD	(1)
+typedef struct {
