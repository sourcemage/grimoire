
config_query_list MC_SCREEN "Which screen library to use?" \
                            ncurses \
                            slang &&

config_query_list MC_SEARCH "Select low-level search engine" \
                            pcre2 \
                            pcre &&

config_query_option MC_CHARSET "Enable charset selection and conversion?" y \
                               "--enable-charset" \
                               "--disable-charset"
