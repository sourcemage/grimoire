. "$GRIMOIRE/FUNCTIONS" &&

case "$HOST" in
*-musl) depends libiconv ;;
esac &&

depends  "readline"  "--with-installed-readline"  &&
depends  "ncurses"   "--with-curses"
depends  smgl-fhs &&
depends  autoconf &&

if spell_ok readline && is_version_less $(installed_version readline) 6.3; then
  force_depends readline
fi
