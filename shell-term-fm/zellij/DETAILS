else
         VERSION="0.38.1"
     SOURCE_HASH="sha512:08a7151d26249ef746022a04f2163942ec5acdc7840623a450ee2e2ab32297afc5b2fcc52450438211f8d39785c6bfbf2c6dcd84ea1753c5771f1d9e62f99847"
