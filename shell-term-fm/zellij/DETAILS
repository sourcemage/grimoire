else
         VERSION="0.43.1"
     SOURCE_HASH="sha512:8fb390a9f054e74b8a50933dd4976339509f7459d049176b1587f7d78c41ffcd71f5a9b38fd9c15c23919826cb4ab750227c8a58b7a4282398954decab3e3bdb"
