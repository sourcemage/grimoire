if [[ $RADEONHD_SCM == y ]]; then
if [[ $RADEONHD_AUTO == y ]]; then
         VERSION=$(date +%Y%m%d)
else
         VERSION=scm
fi
          SOURCE=$SPELL-scm.tar.bz2
