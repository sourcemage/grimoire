   SOURCE_URL[0]=http://www.phy.duke.edu/brahma/$SOURCE
        WEB_SITE=http://www.phy.duke.edu/brahma
         ENTERED=20020609
         UPDATED=20020619
      MAINTAINER=zoran@idi.ntnu.no
