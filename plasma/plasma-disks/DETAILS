        WEB_SITE=https://cgi.kde.org/plasma-disks.git/about
       LICENSE[0]=GPL
         ENTERED=20200804
        KEYWORDS="KDE5"
           SHORT="Monitors S.M.A.R.T. capable devices for imminent failure."
