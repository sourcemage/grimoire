                  ''                          \
                  'for the X11 Xi extension'  &&

optional_depends  libxmu                       \
                  ''                           \
                  ''                           \
                  'for the X11 XMU extension'  &&

optional_depends -sub CXX gcc                 \
                  '--enable-cxx'      \
                  '--disable-cxx'     \
                  'for C++ bindings'  &&

optional_depends  JPEG                            \
                  '--enable-jpeg'                 \
                  '--disable-jpeg'                \
                  'for jpeg compression support'  &&

