depends  automake  &&

optional_depends  g++                 \
                  '--enable-cxx'      \
                  '--disable-cxx'     \
                  'for C++ bindings'  &&

optional_depends  jpeg                            \
                  '--enable-jpeg'                 \
                  '--disable-jpeg'                \
                  'for jpeg compression support'  &&

optional_depends  zlib                            \
                  '--enable-zlib'                 \
                  '--disable-zlib'                \
                  'for zlib compression support'
