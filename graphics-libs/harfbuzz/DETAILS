   SOURCE_URL[0]="git_http://github.com/${SPELL}/${SPELL}.git:${SPELL}-git:main"
   SOURCE_IGNORE=volatile
  FORCE_DOWNLOAD=on
else
         VERSION=11.4.4
     SOURCE_HASH=sha512:9163ac83d8444ff12aecf83aa90a4bdf43ccf4663874e482ef39c7377d7ad3a624e4abfd701b2e95cd24a75ede60be23739c28b6d8a65359cdf9e9c9a27ef163
          SOURCE=$SPELL-$VERSION.tar.xz
