           SPELL=libspectre
         VERSION=0.2.12
      PATCHLEVEL=1
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=https://libspectre.freedesktop.org/releases/$SOURCE
         SOURCE2=$SOURCE.sig
  SOURCE2_URL[0]=${SOURCE_URL[0]}.sig
      SOURCE_GPG=freedesktop.gpg:$SOURCE.sig:UPSTREAM_KEY
  SOURCE2_IGNORE=signature
        WEB_SITE=https://libspectre.freedesktop.org
      LICENSE[0]=GPL
         ENTERED=20080105
        KEYWORDS="Postscript"
           SHORT="library for rendering Postscript documents"
cat << EOF
libspectre is a small library for rendering Postscript documents. It 
provides a convenient easy to use API for handling and rendering Postscript 
documents.
EOF
