if  [  "$POPPLER_CVS"  ==  "y"  ];  then
  depends  CVS
fi  &&

depends  g++           &&
depends  fontconfig    &&
depends  poppler-data  &&

optional_depends  zlib                           \
                  "--enable-zlib"                \
                  "--disable-zlib"               \
                  "for compressed file support"  &&
optional_depends  jpeg                           \
                  "--enable-libjpeg"             \
                  "--disable-libjpeg"            \
                  "for jpeg support"             &&
optional_depends  gtk+2                          \
                  "--enable-poppler-glib"        \
                  "--disable-poppler-glib"       \
                  "for glib wrapper"             &&
optional_depends  qt4                            \
                  "--enable-poppler-qt4"         \
                  "--disable-poppler-qt4"        \
                  "for QT wrapper"               &&
optional_depends  qt-x11                         \
                  "--enable-poppler-qt"          \
                  "--disable-poppler-qt"         \
                  "for QT wrapper"               &&
optional_depends  cairo                          \
                  "--enable-cairo-output"        \
                  "--disable-cairo-output"       \
                  "for cairo output"             &&
optional_depends  abiword                        \
                  "--enable-abiword-output"      \
                  "--disable-abiword-output"     \
                  "generate gtk-docs"            &&
optional_depends  gtk-doc                        \
                  "--enable-gtk-doc"             \
                  "--disable-gtk-doc"            \
                  "generate gtk-docs"
