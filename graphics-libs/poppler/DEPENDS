if  [  "$POPPLER_CVS"  ==  "y"  ];  then
  depends  CVS
fi  &&

depends  g++         &&
depends  fontconfig  &&

optional_depends  zlib              \
                  "--enable-zlib"   \
                  "--disable-zlib"  \
                  "for compressed file support"  &&
optional_depends  jpeg                 \
                  "--enable-libjpeg"   \
                  "--disable-libjpeg"  \
                  "for jpeg support"   &&
optional_depends  glib2                     \
                  "--enable-poppler-glib"   \
                  "--disable-poppler-glib"  \
                  "for glib wrapper"        &&
optional_depends  qt4                       \
                  "--enable-poppler-qt4"    \
                  "--disable-poppler-qt4"   \
                  "for QT wrapper"          &&
optional_depends  qt-x11                    \
                  "--enable-poppler-qt"     \
                  "--disable-poppler-qt"    \
                  "for QT wrapper"          &&
optional_depends  cairo                     \
                  "--enable-cairo-output"   \
                  "--disable-cairo-output"  \
                  "for cairo output"
