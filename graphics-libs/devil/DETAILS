           SPELL=devil
         VERSION=1.6.7
           SNAME=DevIL
          SOURCE=$SNAME-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SNAME-$VERSION
   SOURCE_URL[0]=${SOURCEFORGE_URL}/openil/${SOURCE}
          MD5[0]=28dbdb9d4627006de25a7775cd17a779
        WEB_SITE=http://openil.sourceforge.net/
         ENTERED=20031008
         UPDATED=20031008
