          SPELLX=$SPELL-opensource-src
         VERSION=5.7.0
     SOURCE_HASH=sha512:b8f3fc49cfc15afb26333ca68e8bc4bd2991373878f0846ab79e6457a165ace609aad09b8c61bf10afd8e1ffa3f6f17385f057d6ed38a04e386e2677e38d50e0
          SOURCE=$SPELLX-$VERSION.tar.xz
      SOURCE_URL=$QT_URL/qt/${VERSION%.?}/$VERSION/submodules/$SOURCE
