   SOURCE_URL[0]=$SOURCEFORGE_URL/$SPELL/$SOURCE
     SOURCE_HASH=sha512:4097b5f83bad2484d764615ad63d1e4cca455e9880021dae7e1c93b0e1268d120deee744fa32bfedbc0bfbfd6d71b40eef383543575487a6315f075fa40178ce
