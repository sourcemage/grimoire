. "$GRIMOIRE"/MESON_DEPENDS &&
depends python3 &&
depends lv2 &&
optional_depends gtk+2 gtk2={en,dis}abled "support gtk+2 plugins" &&
optional_depends gtk+3 gtk3={en,dis}abled "support gtk+3 plugins" &&
optional_depends qtbase qt5={en,dis}abled "support QT5 plugins"   &&
if is_depends_enabled $SPELL qtbase; then
  depends -sub CXX gcc
fi &&
optional_depends python-sphinx docs={en,dis}abled "build documentation" &&
if is_depends_enabled $SPELL python-sphinx; then
  depends python-sphinx
fi

