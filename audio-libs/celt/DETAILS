           SPELL=celt
if [[ $CELT_BRANCH == scm ]]; then
  if [[ $CELT_AUTOUPDATE == y ]]; then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=git
  fi
          SOURCE=$SPELL-git.tar.bz2
SOURCE_DIRECTORY="$BUILD_DIRECTORY/$SPELL-git"
   SOURCE_URL[0]=git_http://git.xiph.org/celt.git:$SPELL
   SOURCE_IGNORE=volatile
