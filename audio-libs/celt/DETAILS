   SOURCE_URL[0]=http://downloads.us.xiph.org/releases/$SPELL/$SOURCE
#     SOURCE_HASH=sha512:885fd595b71d9b4dc3d88c2c43f43ba865051a4b94607daaceee9dbf2ccb28f6d3d0287c33a6d332cebb849a82094e0a1bb6da48327c78b9674689f89d653979
