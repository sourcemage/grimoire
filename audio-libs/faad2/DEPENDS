depends  autoconf  &&
depends  automake  &&
depends  libtool   &&
depends  g++       &&

if [ "$XMMS" = "y" ]; then
  depends  xmms  '--with-xmms'  &&
  depends  id3lib
fi

if [ "$FAAD_CVS" = "y" ]; then
  depends  CVS
fi

