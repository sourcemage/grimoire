                 "Enable C++ bindings"                        &&

optional_depends alsa-lib "--with-alsa" "--without-alsa"      \
                 "for alsa sound support"                     &&

optional_depends JACK-DRIVER "--with-jack" "--without-jack"   \
                 "for jack support"      
