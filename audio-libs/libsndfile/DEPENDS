depends  pkgconfig  &&
depends  libtool    &&

optional_depends  alsa-lib                   \
                  "--enable-alsa"            \
                  "--disable-alsa"           \
                  "for ALSA driver support"  &&

optional_depends  flac                     \
                  "--enable-flac"          \
                  "--disable-flac"         \
                  "for FLAC file support"  &&

optional_depends  sqlite              \
                  "--enable-sqlite"   \
                  "--disable-sqlite"  \
                  "for SQLite database support"
