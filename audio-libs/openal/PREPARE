message "Recommended to use snapshot for best compatibility..."
config_query_list OPENAL_VERSION "What version do you want to use?" \
       snapshot release scm  &&
if  [[  "$OPENAL_VERSION"  ==  "scm"  ]];  then
  config_query  OPENAL_SCM_AUTOUPDATE  "Would you like to have $SPELL updated on every system-update?"  ${OPENAL_CVS_AUTOUPDATE:-n}
fi &&
config_query OPENAL_OSS "do you want support for OSS?" y
