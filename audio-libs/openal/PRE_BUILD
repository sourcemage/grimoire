default_pre_build                                       &&
cd $SOURCE_DIRECTORY                                    &&
if [[ $OPENAL_VERSION == snapshot ]]; then
  rm -rf `find -type d -name CVS` &&
  cd linux &&
  NOCONFIGURE=Y ./autogen.sh
elif [[ $OPENAL_VERSION == scm ]]; then
  rm -rf `find -type d -name .svn` &&
  cd OpenAL-Sample &&
  NOCONFIGURE=Y ./autogen.sh
fi &&
if [[ $OPENAL_VERSION != scm ]]; then
  patch -p1 < $SPELL_DIRECTORY/gcc42.patch
fi
