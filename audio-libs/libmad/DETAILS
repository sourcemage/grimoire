          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=${SOURCEFORGE_URL}/mad/$SOURCE
          MD5[0]='12af3433511bda2960a289d2d62f0b00'
        WEB_SITE=http://www.underbit.com/products/mad/
         ENTERED=20031122
