   SOURCE_URL[0]=https://codeberg.org/dnkl/${SPELL}/archive/${VERSION}.tar.gz
     SOURCE_HASH=sha512:1ce70416d592b0fc57c180169754a716a8ea69e6a772e1ff3d5cc4687d66b644fa3e6cb0168d30f10f2671ac81de15218bc9aba6031370ef598aa382f94190e6
