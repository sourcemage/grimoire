           SPELL="swayidle"
         VERSION="1.8.0"
     SOURCE_HASH="sha512:f804f3da1b90353271f0e6645630b622379c5701b6f59949c46cf8b0b2a7f3499ee80d04f788a7d8d191c35097f211cbc3b3dafd3ef056771b60134ae6bebccd"
