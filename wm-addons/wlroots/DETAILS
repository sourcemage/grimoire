  if [[ ${HYPRLAND} == 'y' ]]; then
    WLROOTS_COMMIT=3406c1b17a4a7e6d4e2a7d9c1176affa72bce1bc
         SOURCE="wlroots-${WLROOTS_COMMIT}.tar.gz"
  SOURCE_URL[0]="https://gitlab.freedesktop.org/wlroots/wlroots/-/archive/${WLROOTS_COMMIT}/${SOURCE}.tar.gz"
    SOURCE_HASH=sha512:53cd2ff9aa748f644c53680495ce157b2c796a3239e65bed119de50861fdaa90c6dac9ac6e117e219f5fb313f903811d8ac5f0e897ccd8ffd6c1250353559f39
    SOURCE_DIRECTORY="${BUILD_DIRECTORY}/${SPELL}-${WLROOTS_COMMIT}"
  else
