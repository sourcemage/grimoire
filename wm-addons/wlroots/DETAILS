   FORCE_DOWNLOAD=on
  fi
else
         VERSION=0.16.2
          SOURCE="${SPELL}-${VERSION}.tar.gz"
SOURCE_DIRECTORY="${BUILD_DIRECTORY}/${SPELL}-${VERSION}"
   SOURCE_URL[0]="https://gitlab.freedesktop.org/wlroots/wlroots/-/releases/${VERSION}/downloads/$SOURCE"
         SOURCE2=$SOURCE.sig
  SOURCE2_URL[0]=${SOURCE_URL[0]}.sig
