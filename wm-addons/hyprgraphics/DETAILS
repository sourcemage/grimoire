else
         VERSION="0.5.0"
     SOURCE_HASH="sha512:c787e924bf331546f49f3602bc501be81e40c3de443c08fd2f5e7f519c30c3585c852cf4dac63dff68065e9d7a7bfcefbc0ea1714cbb38f687b7eefcea015082"
          SOURCE="${SPELL}-${VERSION}.tar.gz"
SOURCE_DIRECTORY="${BUILD_DIRECTORY}/${SPELL}-${VERSION}"
   SOURCE_URL[0]="https://github.com/hyprwm/${SPELL}/archive/refs/tags/v${VERSION}.tar.gz"
# Watch: https://github.com/hyprwm/hyprgraphics/tags tags/v([0-9.]+)[.]tar
fi
        WEB_SITE="https://github.com/hyprwm/hyprgraphics"
