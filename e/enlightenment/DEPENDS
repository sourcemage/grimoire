#
# Enlightenment E16 dependencies and optional dependencies
#
if  [  "$EPROFILE_E16"  ==  "y"  ];  then
  depends  e16  &&

  optional_depends  e16-themes   ''  ''  'for default E16 themes'  &&
  optional_depends  e16-docs     ''  ''  'help docs for E16'       &&
  optional_depends  epplet-base  ''  ''  'for plugins'             &&
  optional_depends  exmms        ''  ''  'for a XMMS epplet'
fi  &&

#
# Enlightenment DR17 dependencies and optional dependencies
#
if  [  "$EPROFILE_E17"  ==  "y"  ];  then
  depends  e17  &&

  optional_depends  e_module-eloquence  '' '' 'for on-screen music titles'   &&
  optional_depends  e_modules    ''  ''  'for extra modules'                 &&
  optional_depends  e_utils      ''  ''  'for menu and background editor'    &&
  optional_depends  elapse       ''  ''  'for a clock'                       &&
  optional_depends  elation      ''  ''  'for a media player'                &&
  optional_depends  elicit       ''  ''  'for a color picker and zoom tool'  &&
  optional_depends  enotes       ''  ''  'for a sticky notes system'         &&
  optional_depends  enscribe     ''  ''  'for a simple text editor'          &&
  optional_depends  enterminus   ''  ''  'for a terminal'                    &&
  optional_depends  epdf         ''  ''  'for a PDF/PostScript viewer'       &&
  optional_depends  ephoto       ''  ''  'for a photo presenter'             &&
  optional_depends  eplayer      ''  ''  'for an OggVorbis audio player'     &&
  optional_depends  erme         ''  ''  'for a perl E17 configuration tool' &&
  optional_depends  erss         ''  ''  'for a RSS feed reader'             &&
  optional_depends  eterm        ''  ''  'for a vt102 terminal'              &&
  optional_depends  euphoria     ''  ''  'for an audio player'               &&
  optional_depends  exhibit      ''  ''  'for an ETK-based image viewer'     &&
  optional_depends  iconbar      ''  ''  'for a standalone iconbar'
fi
