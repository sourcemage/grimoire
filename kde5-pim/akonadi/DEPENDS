source  $GRIMOIRE/KDE5_DEPENDS &&
depends kconfig    &&
depends kdbusaddons &&
depends kguiaddons &&
depends ki18n      &&
depends kiconthemes &&
depends kio         &&
depends kitemmodels &&
depends kwindowsystem &&

depends boost   &&
depends libxml2 &&
depends libxslt &&
depends shared-mime-info  &&
depends $AK_DB    &&
case $AK_DB in
  postgresql) sub_depends qtbase POSTGRESQL;;
  mysql) sub_depends qtbase MYSQL &&
         sub_depends mysql INNODB
         ;;
  sqlite) sub_depends qtbase SQLITE;;
  *) message unsupported database engine ;;
esac &&
optional_depends qttools '' ' -DCMAKE_DISABLE_FIND_PACKAGE_Qt5Designer=1' 'obsolete designer plugin'
if is_depends_enabled $SPELL qttools;then
  depends kdesignerplugin
fi
