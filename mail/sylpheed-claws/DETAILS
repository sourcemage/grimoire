           SPELL=sylpheed-claws
         VERSION=2.3.1
          SOURCE=sylpheed-claws-${VERSION}.tar.bz2
      SOURCE_URL=$SOURCEFORGE_URL/sylpheed-claws/$SOURCE
         SOURCE2=${SOURCE}.asc
     SOURCE2_URL=${SOURCE_URL}.asc
      SOURCE_GPG=sylpheed.gpg:${SOURCE}.asc
  SOURCE2_IGNORE=signature
