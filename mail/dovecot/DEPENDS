                 '--without-bzlib'                \
                 'for bzlib support'              &&
optional_depends libcap                           \
                 '--with-libcap'                  \
                 '--without-libcap'               \
                 'for libcap support'             &&
optional_depends linux-pam                       \
                 '--with-pam'                    \
                 '--without-pam'                 \
                 'for PAM support'               &&
