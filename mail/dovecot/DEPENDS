                 '--with-gssapi'                 \
                 '--without-gssapi'              \
                 'for GSSAPI support'            &&
optional_depends openldap                        \
                 '--with-ldap=yes'               \
                 '--without-ldap'                \
                 'Enable LDAP support'           &&
optional_depends mysql                           \
                 '--with-mysql'                  \
                 '--without-mysql'               \
                 'for MySQL support'             &&
