if [[ $SYLPHEED_GTK2 == y ]]; then
  depends GTK2
else
  depends gtk+ &&
  optional_depends gdk-pixbuf "" "" "for built-in image view support"
fi &&

optional_depends compface \
                 "--enable-compface" \
                 "--disable-compface" \
                 "for X-Face support" &&

optional_depends jpilot  \
                 "--enable-jpilot" \
                 "--disable-jpilot" \
                 "for jpilot support" &&

optional_depends openldap \
                 "--enable-ldap" \
                 "--disable-ldap" \
                 "for LDAP support" &&

optional_depends gpgme \
                 "--enable-gpgme" \
                 "--disable-gpgme" \
                 "for encrypted email" &&

optional_depends openssl \
                 "--enable-ssl" \
                 "--disable-ssl" \
                 "for SSL support" &&

optional_depends gtkspell \
                 "--enable-gtkspell" \
                 "--disable-gtkspell" \
                 "for spell checking" &&

optional_depends oniguruma \
                 "--enable-oniguruma" \
                 "--disable-oniguruma" \
                 "use Oniguruma instead of system's regex"
