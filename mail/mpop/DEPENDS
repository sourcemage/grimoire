if [[ "$MPOP_TLS" == "gnutls" ]]
then
depends "gnutls" "--with-ssl=gnutls"
elif [[ "$MPOP_TLS" == "openssl" ]]
then
depends "openssl" "--with-ssl=openssl"
fi                                                       &&
optional_depends "libidn"                                \
                 "--with-libidn"                         \
                 "--without-libidn"                      \
                 "For internationalized domain names."   &&
optional_depends "gsasl"                                 \
                 "--with-libgsasl"                       \
                 "--without-libgsasl"                    \
                 "For more authentication methods."
