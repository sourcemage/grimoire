         SOURCE2=$SOURCE.sig
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/courier/$SOURCE
  SOURCE2_URL[0]=$SOURCEFORGE_URL/courier/$SOURCE2
      SOURCE_GPG="courier.gpg:$SOURCE2"
