OPTS="   --sysconfdir=${INSTALL_ROOT}/etc/${SPELL}        \
      --localstatedir=${INSTALL_ROOT}/var/${SPELL}        \
            --datadir=${INSTALL_ROOT}/usr/share/$SPELL    \
         --libexecdir=${INSTALL_ROOT}/usr/libexec/$SPELL  \
      --disable-root-check                                \
      --with-notice=unicode                               \
      $CIMAP_IPV6                                         \
      $CIMAP_UNICODE                                      \
      $CIMAP_IMAPBUGS                                     \
      $CIMAP_DIRSYNC                                      \
      $CIMAP_SMAP                                         \
      $CIMAP_IMAPBUGS                                     \
      $CIMAP_TRASHQUOTA                                   \
      $OPTS"                                              &&

default_build
