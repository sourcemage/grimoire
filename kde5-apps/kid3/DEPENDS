source  "$GRIMOIRE/KDE_DEPENDS" &&
depends qtdeclarative    &&
depends qtquickcontrols2 &&
depends qtsvg   &&
depends libxslt &&
depends kio     &&
depends kdoctools &&
depends taglib  &&
depends id3lib  &&
depends mp4v2   &&

optional_depends  libvorbis '' '' 'Ogg Vorbis support' &&

if is_depends_enabled $SPELL libvorbis
then
  depends  libogg    &&
  optional_depends  flac         '' '' 'FLAC support'
fi
