default_pre_build    &&
cd $SOURCE_DIRECTORY &&
# we install kde in /opt/kde4 but config file should go to /etc
sedit "s:\${CMAKE_INSTALL_PREFIX}/etc:$INSTALL_ROOT/etc:" \
      cmake/modules/FindKDE4Internal.cmake &&
sedit "s:\${CMAKE_INSTALL_PREFIX}/etc:$INSTALL_ROOT/etc:" \
      cmake/modules/FindPyKDE4.cmake &&
sed -i '/update_xdg_mimetypes/D' mimetypes/CMakeLists.txt
