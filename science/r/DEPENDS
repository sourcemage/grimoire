optional_depends  readline                    \
                  '--with-readline'           \
                  '--without-readline'        \
                  'for command line editing'  &&

optional_depends  tiff                     \
                  '--with-libtiff'     \
                  '--without-libtiff'  \
                  'for TIFF support'        &&
 
optional_depends  libpng                \
                  '--with-libpng'       \
                  '--without-libpng'    \
                  'Enable png support'  &&

optional_depends  JPEG                        \
                  '--with-jpeglib'            \
                  '--without-system-jpeglib'  \
                  'Enable jpeg support'       &&

optional_depends  icu                   \
                  '--with-icu'   \
                  '--without-icu'       \
                  'Use the ICU library'  &&

optional_depends  tk                       \
                  '--with-tcltk'           \
                  '--without-tcltk'        \
                  'Enable TCL/TK support'  &&

