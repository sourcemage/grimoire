                 libxml2=enabled \
                 libxml2=disabled \
                 'for xml support' &&
optional_depends freetype2 \
                 freetype=enabled \
                 freetype=disabled \
                 'freetype2 support' &&
optional_depends fontconfig \
                 fontconfig=enabled \
                 fontconfig=disabled \
                 'System font support'
