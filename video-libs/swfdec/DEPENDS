depends  icu        &&
depends  cairo      &&
depends  liboil     &&
depends  libtool    &&
depends  glib2      &&
depends  pango      &&
depends  pkgconfig  &&

optional_depends  libmad                                 \
                  '--enable-mad'                         \
                  '--disable-mad'                        \
                  'for high-quality MPEG audio decoder'  &&

optional_depends  gst-plugins-good       \
                  '--enable-gstreamer'   \
                  '--disable-gstreamer'  \
                  'for gstreamer audio/video support'  &&

optional_depends  LIBAVCODEC                      \
                  '--enable-ffmpeg'               \
                  '--disable-ffmpeg'              \
                  'for Internet audio and video'  &&

optional_depends  gtk+2               \
                  '--enable-gtk'      \
                  '--disable-gtk'     \
                  'for gtk integration lib'  &&

if is_depends_enabled $SPELL gtk+2; then
depends  libsoup
fi  &&

optional_depends  alsa-lib                  \
                  '--with-audio=alsa'       \
                  ''                        \
                  'for audio output via ALSA'  &&

optional_depends  pulseaudio                \
                  '--with-audio=pulse'      \
                  ''                        \
                  'for audio output via PulseAudio'  &&

optional_depends  gtk-doc              \
                  '--enable-gtk-doc'   \
                  '--disable-gtk-doc'  \
                  'for documentation'
