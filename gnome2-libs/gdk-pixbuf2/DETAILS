          SOURCE=gdk-pixbuf-$VERSION.tar.xz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/gdk-pixbuf-$VERSION
   SOURCE_URL[0]=$GNOME_URL/sources/gdk-pixbuf/${VERSION%.*}/$SOURCE
      LICENSE[0]=GPL
