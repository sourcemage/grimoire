depends glib2 &&
depends gtk+2 &&
depends gconf2 &&
depends libgcrypt &&
depends libtasn1 &&
depends dbus &&

optional_depends hal \
                 "--enable-hal" \
                 "--disable-hal" \
                 "to use HAL for keys on removable drives" &&

optional_depends gtk-doc \
                 "--enable-gtk-doc" \
                 "--disable-gtk-doc" \
                 "to build documentation" &&

optional_depends linux-pam \
                 "--enable-pam" \
                 "--disable-pam" \
                 "to build GNOME keyring PAM helper" &&

suggest_depends openssh \
                "--enable-ssh-agent" \
                "--disable-ssh-agent" \
                "to include SSH agent in gnome-keyring" &&

suggest_depends ca-certificates \
                "--with-root-certs=$INSTALL_ROOT/etc/ssl/certs" \
                "" \
                "to add root certificates"
