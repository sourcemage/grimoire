. "$GRIMOIRE/FUNCTIONS" &&

depends libvorbis  &&

optional_depends alsa-lib                       \
                 "--enable-alsa"                \
                 "--disable-alsa"               \
                 "Enable ALSA support?"         && 

optional_depends pulseaudio                     \
                 "--enable-pulse"               \
                 "--disable-pulse"              \
                 "Enable PulseAudio support?"   &&

optional_depends gstreamer-1.0                  \
                 "--enable-gstreamer"           \
                 "--disable-gstreamer"          \
                 "Enable GStreamer support?"    &&

optional_depends gtk+2                          \
                 "--enable-gtk"                 \
                 "--disable-gtk"                \
                 "Enable GTK+ support?"         &&

optional_depends gtk+3                          \
                 "--enable-gtk3"                \
                 "--disable-gtk3"               \
                 "Enable GTK+3 support?"        &&


optional_depends tdb                            \
                 "--enable-tdb"                 \
                 "--disable-tdb"                \
                 "Enable TDB support?"          &&

optional_depends lynx                           \
                 "--enable-lynx"                \
                 "--disable-lynx"               \
                 "Use lynx for documentation?"  &&

optional_depends gtk-doc                        \
                 "--enable-gtk-doc"             \
                 "--disable-gtk-doc"            \
                 "Build devhelp docs?"          &&

if is_depends_enabled $SPELL gtk+2 || is_depends_enabled $SPELL gtk+3; then
  # Cargo-coded from firefox. Dunno what this mess is supposed to be.
  if spell_ok at-spi2-core &&
    is_version_less "2.45.0" "$(installed_version at-spi2-core)"; then
    depends at-spi2-core
  else
    depends atk
  fi &&
  depends cairo &&
  depends fontconfig &&
  depends freetype2 &&
  depends gdk-pixbuf2 &&
  depends glib2 &&
  depends harfbuzz &&
  depends libx11 &&
  depends pango
fi &&

depends libogg &&
depends libpng &&
depends libtool &&
depends pixman &&

optional_depends DEVICE-MANAGER '' '' 'udev support'
