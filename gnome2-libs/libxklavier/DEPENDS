local XKLAVIER_XLIBS

depends  gcc34     &&
depends  zlib      &&
depends  libxml2   &&
depends  X11-LIBS  &&

XKLAVIER_XLIBS="$(get_spell_provider $SPELL  X11-LIBS)"  &&

if  [[ "${XKLAVIER_XLIBS:0:4}"  !=  "xorg" ]];  then
  depends  xfree86_xkb_xml
fi  &&

optional_depends  doxygen                      \
                  '--enable-doxygen'           \
                  '--disable-doxygen'          \
                  'to generate documentation'
