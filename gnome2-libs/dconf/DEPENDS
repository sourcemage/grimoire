depends glib2 &&
depends libxslt &&
depends docbook-xsl &&

optional_depends gtk+3 \
                 "--enable-editor" \
                 "--disable-editor" \
                 "to build dconf editor" &&

if is_depends_enabled $SPELL gtk+3; then
  depends libxml2
fi &&

optional_depends gettext \
                 "--enable-nls" \
                 "--disable-nls" \
                 "to use Native Language Support" &&

optional_depends gtk-doc \
                 "--enable-gtk-doc" \
                 "--disable-gtk-doc" \
                 "to use gtk-doc to build documentation"
