                  ''                            \
                  ''                            \
                  'for Python bindings'         &&

optional_depends  doxygen                       \
                  ''                            \
                  ''                            \
                  'for a documentation system'  &&

optional_depends  X11-LIBS                      \
                  '--with-x'                    \
                  '--without-x'                 \
                  'to use the X window system'
