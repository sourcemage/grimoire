           SPELL=gtkscintilla
         VERSION=0.8.2
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/moleskine/$SOURCE
          MD5[0]=ab204a6d43126408d0951828d69f94de
      LICENSE[0]=GPL
        WEB_SITE=http://www.micampe.it/software/moleskine/
         ENTERED=20020318
