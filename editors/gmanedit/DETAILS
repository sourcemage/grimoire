           SPELL=gmanedit
         VERSION=0.4.2
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=${SOURCEFORGE_URL}/gmanedit2/${SOURCE}
      SOURCE_GPG=gurus.gpg:${SOURCE}.sig:WORKS_FOR_ME
        WEB_SITE=http://gmanedit2.sourceforge.net/
      LICENSE[0]=GPL
         ENTERED=20011128
    MENU_ITEM[0]="GNOME manpage editor"
    MENU_EXEC[0]=${SPELL}
    MENU_DESC[0]=${SHORT}
        KEYWORDS="editors"
           SHORT="gmanedit is a gtk+ manual page editor"

cat << EOF
The GNOME Manpages Editor (gmanedit) is an editor for man pages that
runs on X with GNOME/GTK. It's similar to most common HTML editors
but more easy.
EOF
