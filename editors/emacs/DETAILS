# Watch: https://ftp.gnu.org/gnu/emacs/
. "$GRIMOIRE/FUNCTIONS"
           SPELL=emacs
if  [[ "$EMACS_BRANCH"  ==  "scm" ]];  then
         VERSION=$(get_scm_version)
          SOURCE=$SPELL-git.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-git
   SOURCE_URL[0]=git://git.sv.gnu.org/emacs.git:emacs-git
   SOURCE_IGNORE=volatile
  FORCE_DOWNLOAD=1
else
         VERSION=30.2
  SECURITY_PATCH=1
          SOURCE=${SPELL}-${VERSION}.tar.gz
# 1. gpg import https://savannah.gnu.org/project/release-gpgkeys.php?group=emacs&download=1
# 2. check new ${SOURCE_URL[0]}.sig against this
# 3. record hash here
     SOURCE_HASH=sha512:6c3ea9fdb68110ad7b87f7338fbe13bf48a0b7ef2be4d9dae4310e10916458e07d4ec90fcb78aa73094a2e339df7118e2f0026941921b9732a8f4be2f758dc2b
SOURCE_DIRECTORY=${BUILD_DIRECTORY}/${SPELL}-${VERSION:0:4}
   SOURCE_URL[0]=${GNU_URL}/${SPELL}/${SOURCE}
   SOURCE_URL[1]=ftp://ftp.gnu.org/pub/gnu/${SPELL}/${SOURCE}
fi
        WEB_SITE=http://www.gnu.org/software/emacs
      LICENSE[0]=GPL
         ENTERED=20010922
        KEYWORDS="emacs editors"
           SHORT="Emacs is the extensible, self-documenting real-time display editor."
cat << EOF
Emacs is the extensible, customizable, self-documenting real-time
display editor.
EOF
