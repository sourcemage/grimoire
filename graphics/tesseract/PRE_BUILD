default_pre_build            &&
cd $SOURCE_DIRECTORY         &&
# fix compile with gcc-4.4.1
patch -p1 <$SPELL_DIRECTORY/gcc-4.4.diff &&
# won't install if java not present
if  ! spell_ok JAVA ;then
sed -i 's/java//' Makefile.in 
fi &&
for LL in $TESS_LANG; do
 case $LL in
   eng) unpack_file 2 ;;
   fra) unpack_file 3 ;;
   ita) unpack_file 4 ;;
   nld) unpack_file 5 ;;
   spa) unpack_file 6 ;;
   deu) unpack_file 7 ;;
 esac
done
