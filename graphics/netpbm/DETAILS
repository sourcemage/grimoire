           SPELL=netpbm
if [[ $NETPBM_SVN == y ]]; then
         VERSION=$NETPBM_RELEASE
          SOURCE=$SPELL-$VERSION.tar.bz2
   SOURCE_URL[0]=svn_http://netpbm.svn.sourceforge.net/svnroot/netpbm/$NETPBM_RELEASE:$SPELL
   SOURCE_IGNORE=volatile
