                  "--enable-png"                     \
                  "--disable-png"                    \
                  "for PNG support"                  &&

optional_depends  "glitz"                            \
                  "--enable-glitz"                   \
                  "--disable-glitz"                  \
                  "for OpenGL accelerated graphics"  &&

optional_depends  "gtk-doc"                          \
                  "--enable-gtk-doc"                 \
                  "--disable-gtk-doc"                \
                  "Build documentation with gtk-doc"
