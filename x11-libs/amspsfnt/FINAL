cd $INSTALL_ROOT/usr/share/fonts/Type1     &&
rm -f fonts.dir fonts.scale   &&
type1inst -nogs -nolog -quiet

message "Note:  To use these fonts add the line"
message "'FontPath \"/usr/share/fonts/Type1\"'"
message "to the Files section of $INSTALL_ROOT/etc/X11/XF86Config"
message "and 'dir \"/usr/share/fonts/Type1\"' to $INSTALL_ROOT/etc/X11/XftConfig file."
